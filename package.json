{
	"name": "noriture",
	"private": true,
	"version": "1.0.0",
	"displayName": "Noriture",
	"shortName": "Noriture",
	"description": "Feed reader for the thirsty",
	"homepage": "https://madcampos.github.io/noriture/",
	"keywords": [
		"app",
		"utilities",
		"tools",
		"rss",
		"feed"
	],
	"author": {
		"name": "madcampos",
		"email": "madcampos@outlook.com"
	},
	"license": "MIT",
	"browser": "./dist/index.html",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/madcampos/sdrlog.git"
	},
	"scripts": {
		"postinstall": "husky install",
		"start": "vite",
		"typecheck": "tsc --noEmit",
		"lint": "npm run typecheck && npm run lint:js && npm run lint:css",
		"lint:js": "eslint ./ --ext .js,.mjs,.ts,.mts --fix --ignore-path .gitignore",
		"lint:css": "stylelint **/*.css --fix",
		"lint-staged": "lint-staged",
		"build": "vite build",
		"prepreview": "npm run build:app",
		"preview": "vite preview --port 3000"
	},
	"dependencies": {
		"@hono/node-server": "^1.8.0",
		"@mozilla/readability": "^0.5.0",
		"@types/node": "^20.11.19",
		"dompurify": "^3.0.8",
		"hono": "^4.0.3",
		"idb": "^8.0.0",
		"tsx": "^4.7.1",
		"urlpattern-polyfill": "^10.0.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^18.6.1",
		"@commitlint/config-conventional": "^18.6.2",
		"@types/dompurify": "^3.0.5",
		"@typescript-eslint/eslint-plugin": "^6.21.0",
		"@typescript-eslint/parser": "^6.21.0",
		"eslint": "^8.56.0",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.2",
		"stylelint": "^16.2.1",
		"typescript": "^5.3.3",
		"vite": "^5.1.3",
		"vite-plugin-pwa": "^0.17.5"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"volta": {
		"node": "20.11.1"
	},
	"lint-staged": {
		"*.ts": "eslint --ext .ts --fix",
		"*.js": "eslint --ext .js --fix",
		"*.css": "stylelint --fix"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	}
}
