{
	"name": "noriture",
	"private": true,
	"version": "1.0.0",
	"displayName": "Noriture",
	"shortName": "Noriture",
	"description": "Feed reader for the thirsty",
	"homepage": "https://madcampos.github.io/noriture/",
	"keywords": [
		"app",
		"utilities",
		"tools",
		"rss",
		"feed"
	],
	"author": {
		"name": "madcampos",
		"email": "madcampos@outlook.com"
	},
	"license": "MIT",
	"browser": "./dist/index.html",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/madcampos/sdrlog.git"
	},
	"scripts": {
		"postinstall": "husky install",
		"start": "snowpack dev --config snowpack.config.dev.mjs",
		"start:sw": "snowpack dev --config snowpack.config.serviceworker.mjs",
		"typecheck": "vue-tsc --noEmit -p tsconfig.json",
		"lint": "npm run typecheck && npm run lint:js && npm run lint:css",
		"lint:js": "eslint . --ext .vue,.js,.mjs,.ts,.mts --fix --ignore-path .gitignore",
		"lint:css": "stylelint **/*.{vue,css} --fix",
		"lint-staged": "lint-staged",
		"build": "snowpack build --mode production",
		"postbuild": "node build/postprocess-files.mjs",
		"build:icons-transparent": "pwa-asset-generator build/logo.html --type png --maskable false --icon-only --scrape false --dark-mode --opaque false --log false public/icons/transparent",
		"build:icons-maskable": "pwa-asset-generator build/logo.html --type png --maskable false --icon-only --log false public/icons/maskable",
		"build:splash": "pwa-asset-generator build/logo.html --type png --splash-only --log false public/splash",
		"build:assets": "npm run build:icons-transparent && npm run build:icons-maskable && npm run build:splash",
		"clean": "node -e \"require('fs').rmSync('./dist', { force: true, recursive: true})\"",
		"test": "wtr"
	},
	"dependencies": {
		"@mozilla/readability": "^0.4.2",
		"@types/node": "^18.6.1",
		"cors-anywhere": "^0.4.4",
		"idb": "^7.0.2",
		"urlpattern-polyfill": "^5.0.5"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.0.3",
		"@commitlint/config-conventional": "^17.0.3",
		"@snowpack/web-test-runner-plugin": "^0.2.2",
		"@typescript-eslint/eslint-plugin": "^5.31.0",
		"@typescript-eslint/parser": "^5.31.0",
		"@web/test-runner": "^0.13.31",
		"@web/test-runner-playwright": "^0.8.9",
		"eslint": "^8.20.0",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.3",
		"pwa-asset-generator": "^6.1.1",
		"snowpack": "^3.8.8",
		"snowpack-plugin-minify-html": "^0.1.1",
		"stylelint": "^14.9.1",
		"typescript": "^4.7.4"
	},
	"engines": {
		"node": ">=17.0.0"
	},
	"volta": {
		"node": "17.8.0"
	},
	"lint-staged": {
		"*.ts": "eslint --ext .ts --fix",
		"*.js": "eslint --ext .js --fix",
		"*.css": "stylelint --fix"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	}
}
