{
	"name": "noriture",
	"private": true,
	"version": "1.0.0",
	"homepage": "https://madcampos.github.io/noriture/",
	"keywords": [
		"app",
		"utilities",
		"tools",
		"rss",
		"feed"
	],
	"author": {
		"name": "madcampos",
		"email": "madcampos@outlook.com"
	},
	"license": "MIT",
	"browser": "./dist/index.html",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/madcampos/sdrlog.git"
	},
	"scripts": {
		"start": "npm run dev",
		"dev": "wrangler dev server/index.ts",
		"dev:client": "vite",
		"deploy:dev": "wrangler deploy --minify --env dev",
		"deploy:prod": "wrangler deploy --minify --env production",
		"format": "dprint fmt --staged",
		"typecheck": "tsc --noEmit",
		"lint": "npm run typecheck && npm run lint:js",
		"lint:js": "eslint --fix",
		"build": "vite build",
		"prepreview": "npm run build",
		"preview": "vite preview --port 3000"
	},
	"dependencies": {
		"@mozilla/readability": "^0.6.0",
		"dompurify": "^3.2.7",
		"hono": "^4.10.3",
		"iconify-icon": "^3.0.1",
		"idb": "^8.0.3",
		"lit": "^3.3.1",
		"typescript": "^5.9.3",
		"urlpattern-polyfill": "^10.1.0"
	},
	"devDependencies": {
		"@types/dompurify": "^3.2.0",
		"@types/node": "^24.6.2",
		"@typescript-eslint/eslint-plugin": "^8.45.0",
		"@typescript-eslint/parser": "^8.45.0",
		"eslint": "^9.37.0",
		"globals": "^16.4.0",
		"typed-query-selector": "^2.12.0",
		"vite": "^7.1.11",
		"vite-plugin-pwa": "^1.0.3",
		"wrangler": "4.42.0"
	},
	"engines": {
		"node": ">=22.20.0"
	},
	"volta": {
		"node": "22.20.0"
	},
	"overrides": {
		"hasown": "npm:@nolyfill/hasown@^1",
		"string.prototype.matchall": "npm:@nolyfill/string.prototype.matchall@^1",
		"is-core-module": "npm:@nolyfill/is-core-module@^1",
		"safe-buffer": "npm:@nolyfill/safe-buffer@^1"
	}
}
