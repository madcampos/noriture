{
	"name": "noriture",
	"private": true,
	"version": "1.0.0",
	"displayName": "Noriture",
	"shortName": "Noriture",
	"description": "Feed reader for the thirsty",
	"homepage": "https://madcampos.github.io/noriture/",
	"keywords": [
		"app",
		"utilities",
		"tools",
		"rss",
		"feed"
	],
	"author": {
		"name": "madcampos",
		"email": "madcampos@outlook.com"
	},
	"license": "MIT",
	"browser": "./dist/index.html",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/madcampos/sdrlog.git"
	},
	"scripts": {
		"postinstall": "husky install",
		"start": "vite",
		"start:sw": "vite",
		"typecheck": "tsc --noEmit",
		"lint": "npm run typecheck && npm run lint:js && npm run lint:css",
		"lint:js": "eslint src --ext .js,.mjs,.ts,.mts --fix --ignore-path .gitignore",
		"lint:css": "stylelint **/*.css --fix",
		"lint-staged": "lint-staged",
		"prebuild:app": "npm run lint",
		"build:app": "vite build",
		"build:icons-transparent": "pwa-asset-generator build/logo.html --type png --maskable false --icon-only --scrape false --dark-mode --opaque false --log false public/icons/transparent",
		"build:icons-maskable": "pwa-asset-generator build/logo.html --type png --maskable false --icon-only --log false public/icons/maskable",
		"build:splash": "pwa-asset-generator build/logo.html --type png --splash-only --log false public/splash",
		"build:assets": "npm run build:icons-transparent && npm run build:icons-maskable && npm run build:splash",
		"prepreview": "npm run build:app",
		"preview": "vite preview --port 3000",
		"test": "vitest",
		"test:coverage": "vitest run --coverage"
	},
	"dependencies": {
		"@mozilla/readability": "^0.5.0",
		"@types/node": "^20.11.16",
		"cors-anywhere": "^0.4.4",
		"dompurify": "^3.0.8",
		"idb": "^8.0.0",
		"urlpattern-polyfill": "^10.0.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^18.6.0",
		"@commitlint/config-conventional": "^18.6.0",
		"@types/dompurify": "^3.0.5",
		"@typescript-eslint/eslint-plugin": "^6.20.0",
		"@typescript-eslint/parser": "^6.20.0",
		"c8": "^9.1.0",
		"eslint": "^8.56.0",
		"husky": "^9.0.10",
		"lint-staged": "^15.2.1",
		"pwa-asset-generator": "^6.3.1",
		"stylelint": "^16.2.1",
		"typescript": "^5.3.3",
		"vite": "^5.0.12",
		"vite-plugin-chunk-split": "^0.5.0",
		"vite-plugin-html": "^3.2.2",
		"vite-plugin-pwa": "^0.17.5",
		"vitest": "^1.2.2"
	},
	"engines": {
		"node": ">=17.0.0"
	},
	"volta": {
		"node": "17.8.0"
	},
	"lint-staged": {
		"*.ts": [
			"eslint --ext .ts --fix",
			"vitest related"
		],
		"*.js": [
			"eslint --ext .js --fix",
			"vitest related"
		],
		"*.css": "stylelint --fix"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	}
}
